<div class="row">

  {{#tenpines/object-table titulos='Id, Fecha, Status, Temas' col=anchoDeTabla bordered=true highlight=true }}
    {{#each model as |reunion|}}
      <tr {{action 'verReunion' reunion}}>
        <td>{{reunion.id}}</td>
        <td>{{reunion.fecha}}</td>
        <td>{{reunion.status}}</td>
        <td>{{reunion.temasPropuestos.length}}</td>
      </tr>

    {{/each}}
  {{/tenpines/object-table}}

  {{# if mostrandoDetalle}}

    <div class="col s8">
      <div class="card">
        <a class="btn-floating waves-effect waves-light red right"  {{action 'cerrarDetalle'}}><i class="material-icons ">close</i></a>

        <div class="card-content">
          <span class="card-title">ID: {{reunionSeleccionada.id}} - Fecha {{reunionSeleccionada.fecha}} </span>
          <div class="row">
           {{#if reunionCerrada}}
            <div class="col s2 push-l10">
              <label>
                Duraci√≥n (minutos)
                <div class="input-field ">
                  {{input value=duracionDeReunion type="number" class="validate" name="minutos de reunion"}}
                </div>
              </label>
            </div>
           {{/if}}
          </div>
          <div class="row">
            {{#tenpines/object-table titulos='Prioridad, Titulo, Votos' col='s12' }}
              {{#each reunionSeleccionada.temasPropuestos as |tema|}}
                {{tema-en-tabla tema=tema ultimoTema=ultimoTemaQueEntra}}
              {{/each}}
            {{/tenpines/object-table}}
          </div>
        </div>

        <div class="card-action right-align">
          {{#if reunionCerrada}}
            {{tenpines/material-button label='minuta' click=(action 'verMinuta') }}
          {{/if}}
          {{tenpines/material-button label='Borrar' click=(action 'borrarReunion' reunionSeleccionada) flat=true}}
          {{tenpines/material-button label='Editar' click=(action 'editarReunion' reunionSeleccionada) }}

        </div>
      </div>

    </div>
  {{/if}}
  {{#if mostrandoMinuta}}

    <div class="col s8">
      <div class="card" >
        <a class="btn-floating waves-effect waves-light red right"  {{action 'cerrarMinuta'}}><i class="material-icons ">close</i></a>


        Formato del template:
        <br>
        <br>
        Fecha: {{minuta.fecha}}
        <br>
        <br>
        Minuteador:
        <br>
        <br>
        Vinieron:   <br>  {{#each minuta.listaDeUsuarios as |user|}}
        {{user.name}} <br>
      {{/each}}
        <br>
        <br>
        Temas propuestos:  <br>    {{#each minuta.listaDeTemas as |tema|}}
        {{tema.titulo}} <br>
      {{/each}}
        <br>
        <br>
        Action items de la reunion anterior:
        <br>
        <br>
        Detalle de los temas hablados:
        <br>
        <br>
        Nombre del tema
        <br>
        <br>
        Conclusiones: Actions Items:
        <br>
        <br>
        Responsable: Tarea a la que se compromete
      </div>
    </div>
  {{/if}}
</div>
<div class="row">
  <a class="btn-floating btn-large waves-effect waves-light red right" {{action 'crearReunion'}}><i
    class="material-icons">add</i></a>
  </div>


