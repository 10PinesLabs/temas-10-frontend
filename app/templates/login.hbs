<div class="row">
  <div class="col s8 offset-s2 m6 offset-m3 l4 offset-l4">

    <div class="card">
      <div class="card-content">
        <span class="card-title">{{application.displayName}}</span>
        <p>Para acceder es necesario tener un usuario del backoffice con permisos de Root</p>
      </div>
      <div class="card-action">
        {{#if errorMessage}}
          <span class="help-block">{{errorMessage}}</span>
        {{/if}}
        {{tenpines/material-button label='Autorizar en backoffice' click=(action 'logIn')}}
      </div>
    </div>

  </div>
</div>

