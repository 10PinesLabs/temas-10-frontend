{{navigation-bar}}

<div class="row">
  <div class="col s12">
    <h4>Temas Generales</h4>
  </div>
</div>

<div class="row">
  <table class="bordered highlight col s12">
    <thead>
      <tr>
        <th class="col s4 ">
          Tema
        </th>
        <th class="col s3 ">
          Autor
        </th>
        <th class="col s1">
          Duración
        </th>
        <th class="col s2 ">
          Última modificación
        </th>
      </tr>
    </thead>

    <tbody>
    {{#each model.temasGenerales as |tema|}}
        <tr class="">
          <td class="col s4 ">
            <span class="titulo-de-tema">{{tema.titulo}}</span>

            <p class="crop">{{markdown-view value=tema.descripcion}}</p>

          </td>
          <td class="col s3 ">
            {{tema.autor}}
          </td>

          <td class="col s1 ">
            {{tema.duracion}}
          </td>

          <td class="col s2 ">
            {{tema.ultimoModificador}}
          </td>

          <td class=" col s1 right-align">
                <span {{action 'mostrarFormularioDeEdicion' tema}}
                  class="clickable">{{materialize/icon-helper 'mode_edit'}}</span>

          </td>
          <td class=" col s1 right-align  ">

                <span {{action 'pedirConfirmacionDeBorrado' tema}}
                  class="clickable">{{materialize/icon-helper 'delete'}}</span>

          </td>

        </tr>
    {{/each}}
    </tbody>
  </table>

  <a class="btn-floating btn-large waves-effect waves-light red right" {{action 'mostrarFormularioDeAlta'}}><i
    class="material-icons">add</i></a>

  {{#if mostrandoFormularioDeEdicion}}
    {{editor-de-tema tema=nuevoTema nombreDeDuraciones=nombreDeDuraciones duraciones=duraciones cerrarEditor=(action 'cerrarFormularioDeEdicion') alGuardar=(action 'actualizarTema')  esObligatorio=true seleccionarDuracion=(action 'seleccionarDuracion') classNames='col s11' checkboxDeshabilitado=true}}
  {{/if}}
  {{#if mostrandoFormularioDeAlta}}
    {{editor-de-tema tema=nuevoTema nombreDeDuraciones=nombreDeDuraciones duraciones=duraciones cerrarEditor=(action 'cerrarFormularioDeAlta') alGuardar=(action 'agregarTema')  esObligatorio=true seleccionarDuracion=(action 'seleccionarDuracion') classNames='col s11' checkboxDeshabilitado=true}}
  {{/if}}

</div>

{{tenpines/modal-de-confirmacion
  open=modalDeBorradoAbierto
  titulo='Confirmar eliminacion de tema general'
  descripcion=mensajeDeConfirmacionDeBorrado
  accionAceptar=(action 'borrarTemaElegido')
}}


